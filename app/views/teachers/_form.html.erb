    <div id="error_explanation">
      <h2><%= pluralize(teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

      <ul>
      <% teacher.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="panel-body">
      <%= form_for @teacher, local: true, :html => {:class => 'form-horizontal m-t-20', 'data-parsley-validate' => ''} do |f| %> 
                        <div class="form-group ">
                            <div class="col-xs-12">
                               <%= f.text_field :nom, id: :teacher_nom, :class => 'form-control',:placeholder => 'Nom',  :required => 'true' %>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-xs-12">
                               <%= f.text_field :prenoms, id: :teacher_prenoms, :class => 'form-control',:placeholder => 'Prenoms',  :required => 'true' %>
                            </div>
                        </div>
                     

                        <div class="form-group">
                            <div class="col-xs-12">
                               <%= f.password_field :password, id: :teacher_password, :class => 'form-control',:placeholder => 'Password',  :required => 'true' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                               <%= f.password_field :password, id: :teacher_password2, :class => 'form-control',:placeholder => 'Confirm password',  :required => 'true','data-parsley-equalto'=>"#teacher_password" %>
                            </div>
                        </div>

                        <div class="form-group text-center m-t-40">
                            <div class="col-xs-12">
                                <%= f.submit("Submit", class: "btn btn-pink btn-block text-uppercase" ) %>
                            </div>
                        </div>
                       <%end%>
                 
                </div>

