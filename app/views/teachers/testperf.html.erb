<div class="row">
														<div class="col-sm-12">
																<h4 class="page-title">Test Performances</h4>
																<ol class="breadcrumb">
																		<li>
																				<a href="#">Ubold</a>
																		</li>
																		<li>
																				<a href="#">Pages</a>
																		</li>
																		<li class="active">
																				Blank Page
																		</li>
																</ol>
														</div>
												</div>

<% @tests.each do |a| %>
												<div class="card-box">
														<h4 class="header-title m-t-0"><b><%= a.title %></b></h4>
														<p class="text-muted m-b-30 font-13"><%= a.objective %></p>
						
														<div class="portlet">
																<div class="portlet-heading portlet-default">
																		<h3 class="portlet-title text-dark">
																				Total Attemps: <%= Evaluation.where(test_id:a.id).count%> 
																		</h3>
																																				<div class="portlet-widgets">
																				<a href="javascript:;" data-toggle="reload"><i class="ion-refresh"></i></a>
																				<span class="divider"></span>
																				<a data-toggle="collapse" data-parent="#accordion1" href="#<%=a.id%>" class="collapsed" aria-expanded="false">details</a>
																				<span class="divider"></span>

																		</div>
																		<div class="clearfix"></div>
																</div>
																<div id="<%=a.id%>" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
																		<div class="portlet-body">
																	   <table class="table table-striped table-bordered">
										<thead>
											<tr>
												<th data-field="id" data-sortable="true" data-formatter="invoiceFormatter">Student Id</th>
												
												
												
												<th data-field="status" data-align="center" data-sortable="true" data-formatter="statusFormatter">Score</th>
												<th data-field="status" data-align="center" data-sortable="true" data-formatter="statusFormatter">Completed</th>
											</tr>
										</thead>
										
										<tbody>
										<% Evaluation.where(test_id: a.id,complete: true).each do |b| %>
											<tr class="accordion-toggle" data-toggle="collapse" data-target='#<%=b.student_id%>'>
												<td><%=Student.find(b.student_id).nom%> <%Student.find(b.student_id).prenoms%></td>
												<td><%=b.score%></td>
												<td><%=b.last_touched%></td>
												
											
											
      <td id='<%=b.student_id%>' class=" accordion-body collapse" >
        <table class="table">
          <thead>
            <th>Score</th>
            <th>Spending Limit</th>
          </thead>
          <tbody>
          <% Evaluation.where(test_id: a.id, student_id: b.student_id).each do |c| %>	
            <tr>
              <td><%=c.score%></td>
              <td>2,000.00</td>
            </tr>
            <%end%>
            <tr>
              <td>MCS</td>
              <td>15,700.61</td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
											
											<%end%>
										
										</tbody>
									</table> 

																		</div>

																</div>

														</div>

												</div>
<%end%>