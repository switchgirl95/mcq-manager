<%= form_for @clazz, local: true, :html => {:class => 'form-horizontal m-t-20', 'data-parsley-validate' => ''} do |form| %> 
  <% if clazz.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(clazz.errors.count, "error") %> prohibited this clazz from being saved:</h2>

      <ul>
      <% clazz.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


 
<div class="form-group ">
                            <div class="col-xs-12">
                               <%= form.label 'department' %>
                               <%= collection_select(:clazz, :department_id, Department.all, :id, :dept_code, {:prompt=>'Select a department'} ,{:class => 'form-control'}) %>
                            </div>
                      </div>
                        <div class="form-group ">
                            <div class="col-xs-12">
                               <%= form.label 'level' %>
                               <%= select(:clazz, :level, options_for_select(1..5), {:prompt=>'Select a level'} ,{:class => 'form-control'}) %>
                              
                            </div>
                        </div>
  <div class="actions">
    <%= form.submit 'Submit', :class => 'btn btn-default'%>
  </div>
<% end %>
