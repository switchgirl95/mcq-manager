  <div class="panel-body">
      
                        <div class="form-group ">
                            <div class="col-xs-12">
                               <%= form.text_field :matricule, id: :student_matricule, :class => 'form-control',:placeholder => 'Matricule', :required => 'true'  %>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-xs-12">
                               <%= form.text_field :nom, id: :student_nom , :class => 'form-control',:placeholder => 'Nom',:required => 'true'  %>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-xs-12">
                               <%= form.text_field :prenoms, id: :student_prenoms , :class => 'form-control',:placeholder => 'Prenoms',:required => 'true' %>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-xs-12">
                              <%= grouped_collection_select(:student, :clazz_id, Department.all, :clazzs, :dept_name, :id, :class_code,{:prompt=>'Select a class'} ,{:class => 'form-control'})%>
                            </div>
                        </div>
                        
                      
                        <div class="form-group">
                            <div class="col-xs-12">
                               <%= form.password_field :password, id: :student_password, :class => 'form-control',:placeholder => 'Password' ,:required => 'true'%>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12">
                               <%= form.password_field :password, id: :student_password1, :class => 'form-control',:placeholder => 'Confirm Password' ,:required => 'true', 'data-parsley-equalto'=>"#student_password"%>
